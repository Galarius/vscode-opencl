    "version": "0.2.0",
    "configurations": [
        {
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
                "${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "npm: webpack-dev",
            "env": {
                "VSCODE_DEBUG_MODE": "true"
            }
		}
    ]
}