{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "target": "es6",
        "module": "commonjs",
        "removeComments": true,
        "moduleResolution": "node",
        "outDir": "./_build",
        "lib": [
            "es2016"
        ],
        "sourceMap": true,
        "rootDir": "./"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}