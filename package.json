{
    "name": "vscode-opencl",
    "displayName": "OpenCL",
    "description": "OpenCL for Visual Studio Code",
    "version": "0.4.0",
    "publisher": "galarius",
    "icon": "images/OpenCL_128x.png",
    "author": {
        "name": "Galarius"
    },
    "license": "SEE LICENSE IN LICENSE.txt",
    "repository": {
        "type": "git",
        "url": "https://github.com/Galarius/vscode-opencl"
    },
    "engines": {
        "vscode": "^1.16.0"
    },
    "markdown": "github",
    "keywords": [
        "OpenCL",
        "Khronos",
        "cl"
    ],
    "categories": [
        "Programming Languages",
        "Snippets",
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:opencl",
        "onLanguage:c",
        "onLanguage:cpp",
        "onCommand:opencl.info"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "opencl",
                "aliases": [
                    "OpenCL",
                    "opencl"
                ],
                "extensions": [
                    ".cl",
                    ".ocl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "opencl",
                "scopeName": "source.opencl",
                "path": "./syntaxes/opencl.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "opencl",
                "path": "./snippets/opencl.device.tmSnippets.json"
            },
            {
                "language": "c",
                "path": "./snippets/opencl.host.tmSnippets.json"
            },
            {
                "language": "cpp",
                "path": "./snippets/opencl.host.tmSnippets.json"
            }
        ],
        "commands": [
            {
                "command": "opencl.info",
                "title": "OpenCL: Info",
                "description": "Show OpenCL platforms/devices info."
            }
        ],
        "configuration": {
            "type": "object",
            "title": "OpenCL Configuration",
            "properties": {
                "opencl.formatting.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/Disable code formatting for OpenCL (Restart is required)."
                },
                "opencl.formatting.name": {
                    "type": "string",
                    "default": "astyle",
                    "description": "The file name of the formatting utility.\nShould be available at $PATH, otherwise specify full file name."
                },
                "opencl.formatting.args": {
                    "type": "array",
                    "default": [
                        "-n"
                    ],
                    "description": "Command line arguments for formatting utility.\nUse variable ${workspaceRoot} to specify configuration file in a workspace \n(e.g. `--options=${workspaceRoot}/.astylerc` for Artistic Style)."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/node": "^7.0.69",
        "typescript": "^2.9.2",
        "vscode": "^1.1.21"
    },
    "dependencies": {
        "child-process-promise": "^1.1.0",
        "hoek": "^5.0.4"
    }
}
