{
    "name": "vscode-opencl",
    "displayName": "OpenCL",
    "description": "OpenCL for Visual Studio Code",
    "version": "0.5.0",
    "publisher": "galarius",
    "icon": "images/OpenCL_128x.png",
    "author": {
        "name": "Galarius"
    },
    "license": "SEE LICENSE IN LICENSE.txt",
    "repository": {
        "type": "git",
        "url": "https://github.com/Galarius/vscode-opencl"
    },
    "engines": {
        "vscode": "^1.26.0"
    },
    "markdown": "github",
    "keywords": [
        "OpenCL",
        "Khronos",
        "cl"
    ],
    "categories": [
        "Programming Languages",
        "Snippets",
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:opencl",
        "onLanguage:c",
        "onLanguage:cpp",
        "onCommand:opencl.info",
        "onCommand:workbench.action.tasks.runTask"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "opencl",
                "aliases": [
                    "OpenCL",
                    "opencl"
                ],
                "extensions": [
                    ".cl",
                    ".ocl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "opencl",
                "scopeName": "source.opencl",
                "path": "./syntaxes/opencl.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "opencl",
                "path": "./snippets/opencl.device.tmSnippets.json"
            },
            {
                "language": "c",
                "path": "./snippets/opencl.host.tmSnippets.json"
            },
            {
                "language": "cpp",
                "path": "./snippets/opencl.host.tmSnippets.json"
            }
        ],
        "commands": [
            {
                "command": "opencl.info",
                "title": "OpenCL: Info",
                "description": "Show OpenCL platforms/devices info."
            }
        ],
        "configuration": {
            "type": "object",
            "title": "OpenCL Configuration",
            "properties": {
                "opencl.formatting.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/Disable code formatting for OpenCL (Restart is required)."
                },
                "opencl.formatting.name": {
                    "type": "string",
                    "default": "astyle",
                    "description": "The file name of the formatting utility.\nShould be available at $PATH, otherwise specify the full file name."
                },
                "opencl.formatting.args": {
                    "type": "array",
                    "default": [
                        "-n"
                    ],
                    "description": "Command line arguments for formatting utility.\nUse variable ${workspaceRoot} to specify configuration file in a workspace \n(e.g. `--options=${workspaceRoot}/.astylerc` for Artistic Style)."
                }
            }
        },
        "taskDefinitions": [
            {
                "type": "opencl",
                "required": [
                    "task",
                    "command",
                    "args"
                ],
                "properties": {
                    "label": {
                        "type": "string",
                        "description": "Task name"
                    },
                    "task": {
                        "type": "string",
                        "description": "The offline compiler task"
                    },
                    "command": {
                        "type": "string",
                        "description": "The offline compiler command"
                    },
                    "args": {
                        "type": "array",
                        "description": "The offline compiler command-line arguments"
                    },
                    "osx": {
                        "type": "object",
                        "description": "Overrides for macOS"
                    },
                    "linux": {
                        "type": "object",
                        "description": "Overrides for Linux"
                    },
                    "windows": {
                        "type": "object",
                        "description": "Overrides for Windows"
                    }
                }
            }
        ],
        "problemMatchers": [
            {
                "name": "opencl.common",
                "owner": "opencl",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+): ((fatal )?error|warning|Scholar): (.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 6
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/node": "^8.10.39",
        "typescript": "^3.2.2",
        "vscode": "^1.1.26"
    },
    "dependencies": {
        "child-process-promise": "^1.1.0",
        "hoek": "^5.0.4"
    }
}
