{
    "name": "vscode-opencl",
    "displayName": "OpenCL",
    "description": "OpenCL for Visual Studio Code",
    "version": "0.1.0",
    "publisher": "galarius",
    "icon": "OpenCL_128x.jpg",
    "author": {
        "name": "Galarius"
    },
    "license": "SEE LICENSE IN LICENSE.txt",
    "repository": {
        "type": "git",
        "url": "https://github.com/Galarius/vscode-opencl"
    },
    "engines": {
        "vscode": "^0.10.0"
    },
    "markdown": "github",
    "keywords": [
        "OpenCL",
        "Khronos",
        "cl"
    ],
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:opencl"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "opencl",
                "aliases": [
                    "OpenCL",
                    "opencl"
                ],
                "extensions": [
                    ".cl",
                    ".ocl"
                ]
            }
        ],
        "grammars": [
            {
                "language": "opencl",
                "scopeName": "source.opencl",
                "path": "./syntaxes/opencl.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.4.2",
        "vscode": "^1.1.4"
    }
}
