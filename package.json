{
    "name": "vscode-opencl",
    "displayName": "OpenCL",
    "description": "OpenCL for Visual Studio Code",
    "version": "0.1.3",
    "publisher": "galarius",
    "icon": "images/OpenCL_128x.jpg",
    "author": {
        "name": "Galarius"
    },
    "license": "SEE LICENSE IN LICENSE.txt",
    "repository": {
        "type": "git",
        "url": "https://github.com/Galarius/vscode-opencl"
    },
    "engines": {
        "vscode": "^0.10.0"
    },
    "markdown": "github",
    "keywords": [
        "OpenCL",
        "Khronos",
        "cl"
    ],
    "categories": [
        "Languages",
        "Snippets"
    ],
    "activationEvents": [
        "onLanguage:opencl",
        "onLanguage:c",
        "onLanguage:cpp"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "opencl",
                "aliases": [
                    "OpenCL",
                    "opencl"
                ],
                "extensions": [
                    ".cl",
                    ".ocl"
                ]
            }
        ],
        "grammars": [
            {
                "language": "opencl",
                "scopeName": "source.opencl",
                "path": "./syntaxes/opencl.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "opencl",
                "path": "./snippets/opencl.device.tmSnippets.json"
            },
            {
                "language": "c",
                "path": "./snippets/opencl.host.tmSnippets.json"
            },
            {
                "language": "cpp",
                "path": "./snippets/opencl.host.tmSnippets.json"
            }
        ],
        "commands": [
            {
                "command": "opencl.info",
                "title": "OpenCL: Info",
                "description": "Show OpenCL platforms/devices info."
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.4.2",
        "vscode": "^1.1.4",
        "@types/node": "^7.0.43"
    },
    "dependencies": {
        "child-process-promise": "^1.1.0"
    }
}
